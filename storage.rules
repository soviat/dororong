rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /evidence/{orderId}/{fileName} {
      allow read: if request.auth != null && request.auth.token.admin == true;
      allow write: if request.auth != null
        && exists(/databases/(default)/documents/orders/$(orderId))
        && (
          get(/databases/(default)/documents/orders/$(orderId)).data.buyerId == request.auth.uid
          || get(/databases/(default)/documents/orders/$(orderId)).data.sellerId == request.auth.uid
          || request.auth.token.admin == true
        );
    }
    match /public/statements/{file} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
    match /{path=**} {
      allow read, write: if request.auth != null;
    }
  }
}
